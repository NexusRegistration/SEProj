<!DOCTYPE html>
<html>
<head>

	<!--Header-->
	<%- include('../partials/headers/header-admin.ejs')%>

	<title>Class Registration Form</title>

	<link rel="stylesheet" href="/css/style.css">

	<script type="text/javascript" src="/public/javascripts/subject-populator.js"></script>
	<script type="text/javascript" src="/public/javascripts/building-populator.js"></script>
</head>
<body>
	
	<form role="form" class="create-class" action="/add-classes" method="POST">

		<h1> Add Class </h1>

		<!-- Department Dropdown -->
		<label for="department">Department:</label>
		<div class="form-input">
			<select id="department" name="department" required>
			  <% departments.forEach(function(department) { %>
				<option value="<%= department %>"><%= department %></option>
			  <% }); %>
			</select>
		</div>
		<!-- Subject Dropdown -->
		<label for="className">Class name:</label>
		<div class="form-input">
			<select id="className" name="subject" required>
			</select>
		</div>
		<!-- Schedule Dropdown -->
		<label for="schedule">Schedule:</label>
		<div class="form-input">
			<select class="form-control" id="schedule" name="schedule" required>
				<% schedules.forEach(function(schedule) { %>
					<option value="<%= schedule._id %>"><%= schedule.classTimes[0].day %> <%= schedule.classTimes[1].day %> <%= schedule.classTimes[0].startTime %> - <%= schedule.classTimes[0].endTime %></option>
				<% }); %>
			</select>
		</div>
		<!-- Room Selection -->
		<label for="building">Room:</label>
		<div class="form-input">
			<select class="form-control" id="building">
				<option selected value="">Select a Building</option>
				<% buildings.forEach(function(building) { %>
					<option value="<%= building %>"><%= building %></option>
				<% }); %>
			</select>
			<select class="form-control" id="room" name="room" required>
				<option selected value="">Select a Room</option>
				<% rooms.forEach(function(room) { %>
					<option value="<%= room._id %>"><%= room.building %>-<%= room.number %></option>
				<% }); %>
			</select>
		</div>
		<!-- Semester Selection -->
		<label for="semester">Semester:</label>
		<div class="form-input">
			<select class="form-control" id="semester" name="semester" required>
				<% semesters.forEach(function(semester) { %>
					<option value="<%= semester.season %> <%= semester.year %>"><%= semester.season %>&nbsp<%= semester.year %></option>
				<% }); %>
			</select>
		</div>

		<!--Submit Button-->
		<div class="form-group">
			<button type="submit" class="btn-primary">Add Class</button>
		</div>
	</form>


</body>
</html>